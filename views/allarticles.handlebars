<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Mongoose Digital Trends News Scraper
                <button class="btn btn-primary scrape" type="button">Scrape New Articles</button>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p>All scraped articles:</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <ul class="list-group">
                {{#each articles}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3">
                            <h4>{{headline}}</h4>

                        </div>
                        <div class="col-2">
                                 <img src="{{img}}"alt="{{img}}">
                        </div>
                        <div class="col-4">
                            <p>{{summary}}</p>
                            <p><a href="{{url}}">{{url}}</a></p>
                        </div>
                        <div class="col-3">

                            <br>
                            <a href="/articles/{{_id}}">
                            <button class="btn btn-primary" type="button" data-id="{{_id}}">View Comments</button></a>
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
            <br><br>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/app.js"></script>